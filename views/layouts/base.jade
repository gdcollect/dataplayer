doctype 5
//if lt IE 7
  html.no-js.lt-ie9.lt-ie8.lt-ie7.ie
//if IE 7
  html.no-js.lt-ie9.lt-ie8.ie
//if IE 8
  html.no-js.lt-ie9.ie
//[if gt IE 8]><!
html
  //<![endif]
  head
    meta(http-equiv="X-UA-Compatible",content="IE=edge,chrome=1")
    meta(name="viewport",content="width=1200")
    meta(charset="utf-8")
    if typeof obj.content.title !== "undefined"
      title=obj.content.title

    link(href='http://fonts.googleapis.com/css?family=Merriweather:400,700,300', rel='stylesheet', type='text/css')
    block stylesheets
    !=css("style")

  - bodyClass  = !editMode || "editor-mode"
  - bodyClass += " theme-" + (obj.content.theme || "default")
  body.js-loading(class=bodyClass, data-page=obj.slug, data-given-token=editToken)

    #workspace
      - navigation = obj.content.navigation || "horizontal"
      #overflow(data-navigation=navigation, class=navigation, style=screenStyle(obj.content))
        include ../widget/menu.jade
        #container
          block content                  

    !=js('Interactive')

    //- Edit mode
    if editMode
      //- Loads the editor html
      include ../widget/editor.jade
      //- Loads its library 
      !=js('Editor')

    //- Context scripts    
    block scripts
    include ../widget/deprecated
    include ../widget/ga