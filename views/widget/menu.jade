.nav(class=data["menu-position"] || "top left")
    ul.steps
        each step, stepKey in data.steps          
            li(class=(step["no-index"] ? "hidden":""))
                a.to-step(href="#step="+stepKey, data-step=stepKey)
                    span.wrapper=strip_tags(step.name)
                    if step["menu-icon"]
                        i(style="background-image:url('#{step["menu-icon"]}')").with-icon=stepKey
                    else
                        i=stepKey
                        
    ul.arrows
        li
            a.previous(title="Précendent") ❰
        li
            a.next(title="Suivant") ❱
